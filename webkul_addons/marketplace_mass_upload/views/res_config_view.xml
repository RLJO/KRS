<odoo>
    <data>
        <record id="inherit_marketplace_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">marketplace.config.setting.mass.upload.view</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="odoo_marketplace.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//page[@name='config_product_terms']//div[hasclass('row')]" position="inside">
                    <div class="col-xs-12 col-md-6 o_setting_box">
                        <div class="o_setting_left_pane">
                            <field name="group_allow_mass_upload" class="oe_inline" help="Enable to allow mass upload of products and inventory."/>
                        </div>
                        <div class="o_setting_right_pane" title="Allow 3mass upload of products and inventory.">
                            <label for="group_allow_mass_upload" string="Allow mass upload of products and inventory"/>
                            <div class="text-muted">
                                â‡’ Enable to allow mass upload of products and inventory.
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
