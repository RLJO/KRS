<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="wk_product_template_tree_image_added" model="ir.ui.view">
            <field name="name">product.template.tree.image.added</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_tree_view"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                
                    <field name="image_512" widget="image" class="wk_img" string="Product Image"/>
                    
                </field>
            </field>
        </record>
        <record id="wk_product_product_tree_image_added" model="ir.ui.view">
            <field name="name">product.product.tree.image.added</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="after">
                    <field name="image_512" widget="image" class="wk_img" string="Product Image"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
